<%- include('partials/header') -%>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(var i=0; i<recipes.length; i++) {%>
                <div class="col">
                    <div class="card h-100">
                        <a href="/recipe/<%= recipes[i]._id%>">
                            <img src="<%= recipes[i].image%>" class="card-img-top" alt="...">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                Nombre: <%= recipes[i].name %>
                            </h5>
                            <p class="card-text truncated-text">
                                Ingredientes: <%= recipes[i].ingredients %>
                            </p>
                            <p class="card-text truncated-text">
                                Receta: <%= recipes[i].directions %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                Escripta por: <%= recipes[i].user.email %>
                            </small>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <%- include('partials/footer') -%>